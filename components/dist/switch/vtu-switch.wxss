@import "../assets/css/Vtu_Common.wxss";
.Vtu-Switch{
    overflow: hidden;
    position: relative;
}
.Vtu-Switch.is-disabled .Vtu-Switch-Bg{
    opacity: 0.4;
}
.Vtu-Switch.is-disabled .Vtu-Switch-Btn{
}
.Vtu-Switch.is-default{
    width: 60px;
    height: 30px;
    line-height: 30px;
}
.Vtu-Switch.is-small{
    width: 50px;
    height: 25px;
    line-height: 25px;
}
.Vtu-Switch.is-small.is-simple{
    width: 40px;
    height: 25px;
    line-height: 25px;
}
.Vtu-Switch.is-default.is-simple{
    width: 48px;
}
.Vtu-Switch.is-circle,
.Vtu-Switch.is-circle .Vtu-Switch-Btn,
.Vtu-Switch.is-circle.is-simple .Vtu-Switch-Bg{
    border-radius: 100px;
}
.Vtu-Switch.is-round,
.Vtu-Switch.is-round .Vtu-Switch-Btn,
.Vtu-Switch.is-round.is-simple .Vtu-Switch-Bg{
    border-radius: var(--round);
}



.Vtu-Switch.is-simple .Vtu-Switch-Bg{
    width: calc(100% - 4px);
    top: 50%;
    margin-left: 2px;
}
.Vtu-Switch.is-simple.is-default .Vtu-Switch-Bg{
    height: 16px;
    margin-top: -8px;
}
.Vtu-Switch.is-simple.is-small .Vtu-Switch-Bg{
    margin-top: -6px;
    height: 12px;
}

.Vtu-Switch.is-simple .Vtu-Switch-Btn{
    box-shadow: 0px 0px 1px 1px #d3d3d3;
}


.Vtu-Switch.is-open .Vtu-Switch-Bg{
    background: var(--primary);
}
.Vtu-Switch.is-close .Vtu-Switch-Bg{
    background: var(--default);
}
.Vtu-Switch-Bg{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0px;
    transition: all .5s;
    left: 0px;
    z-index: 1;
}
.Vtu-Switch-Bg .icon{
    width: 50%;
    height: 100%;
    position: absolute;
    top: 0px;
    z-index: 2;
    text-align: center;
    color: #fff;
}
.Vtu-Switch-Bg .icon.open{
    left: 0px;
}
.Vtu-Switch-Bg .icon.close{
    right: 0px;
}
.Vtu-Switch-Bg .icon.label{
    font-size: 12px;
}

.Vtu-Switch-Btn{
    width: 26px;
    height: 26px;
    position: absolute;
    background: #fff;
    transition: all 0.5s;
    text-align: center;
    line-height: 26px;
    z-index: 3;
}

.Vtu-Switch.is-default.is-round .Vtu-Switch-Btn,
.Vtu-Switch.is-default.is-circle .Vtu-Switch-Btn{
    top: 1px;
    width: 28px;
    height: 28px;
    line-height: 28px;
}
.Vtu-Switch.is-small.is-round .Vtu-Switch-Btn,
.Vtu-Switch.is-small.is-circle .Vtu-Switch-Btn{
    top: 1px;
    width: 23px;
    height: 23px;
    line-height: 23px;
}
.Vtu-Switch.is-default.is-simple .Vtu-Switch-Btn{
    top: 3px;
    width: 24px;
    height: 24px;
    line-height: 24px;
}
.Vtu-Switch.is-small.is-simple .Vtu-Switch-Btn{
    top: 4px;
    width: 17px;
    height: 17px;
    line-height: 17px;
}
.Vtu-Switch.is-circle.is-open.is-small .Vtu-Switch-Btn{
    left: 26px;
}
.Vtu-Switch.is-circle.is-open.is-default .Vtu-Switch-Btn{
    left: 31px;
}
.Vtu-Switch.is-circle.is-close.is-small .Vtu-Switch-Btn{
    left: 1px;
}
.Vtu-Switch.is-circle.is-close.is-default .Vtu-Switch-Btn{
    left: 1px;
}
.Vtu-Switch.is-circle.is-open.is-small.is-simple .Vtu-Switch-Btn{
    left: 20px;
}
.Vtu-Switch.is-circle.is-open.is-default.is-simple .Vtu-Switch-Btn{
    left: 23px;
}
.Vtu-Switch.is-circle.is-close.is-small.is-simple .Vtu-Switch-Btn{
    left: 1px;
}
.Vtu-Switch.is-circle.is-close.is-default.is-simple .Vtu-Switch-Btn{
    left: 1px;
}
.Vtu-Switch.is-round.is-open.is-small .Vtu-Switch-Btn{
    left: 26px;
}
.Vtu-Switch.is-round.is-open.is-default .Vtu-Switch-Btn{
    left: 31px;
}
.Vtu-Switch.is-round.is-close.is-small .Vtu-Switch-Btn{
    left: 1px;
}
.Vtu-Switch.is-round.is-close.is-default .Vtu-Switch-Btn{
    left: 1px;
}
.Vtu-Switch.is-round.is-open.is-small.is-simple .Vtu-Switch-Btn{
    left: 20px;
}
.Vtu-Switch.is-round.is-open.is-default.is-simple .Vtu-Switch-Btn{
    left: 23px;
}
.Vtu-Switch.is-round.is-close.is-small.is-simple .Vtu-Switch-Btn{
    left: 1px;
}
.Vtu-Switch.is-round.is-close.is-default.is-simple .Vtu-Switch-Btn{
    left: 1px;
}

.Vtu-Switch-Btn i{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0px;
    top: 0px;
    animation-name: myfirst; /*动画的名称 */
    animation-duration: 1000ms; /*动画从开始到结束的时间*/
    animation-timing-function: linear; /*动画执行快慢的参数*/
    animation-iteration-count: infinite; /*动画执行多少次的参数*//*以下是兼容ios所需，参数意义与上相同*/
    -webkit-animation-name: myfirst;
    -webkit-animation-duration: 1000ms;
    -webkit-animation-timing-function: linear;
    -webkit-animation-iteration-count: infinite;
}
@keyframes myfirst {
    /*开始转的角度*/
    from {
        transform: rotate(0deg);
    }/*结束的角度*/
    to {
        transform: rotate(360deg);
    }
}
/*兼容ios*/
@-webkit-keyframes myfirst {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}
