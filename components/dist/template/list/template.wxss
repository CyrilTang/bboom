.vtu-comment{
    padding: 10px;
    background: #fff;
    width: calc(100% - 20px);
    float: left;
}
.vtu-comment.style3{
    border-bottom: 1px solid var(--border-bd);
}
.vtu-comment-user{
    width: 30px;
    height: 30px;
    float: left;
}
.vtu-comment-user image{
    width: 100%;
    height: 100%;
    border-radius: 100px;
}
.vtu-comment-info{
    width: calc(100% - 40px);
    float: left;
    margin-left: 10px;
    border-bottom: 1px solid var(--border-bd);
    padding-bottom: 10px;
}
.vtu-comment-info-title{
    width: 100%;
    height: 20px;
    line-height: 20px;
    color: var(--primary);
}
.vtu-comment-info-title-label{
    float: left;
    font-size: 14px;
}
.vtu-comment-info-title-icon{
    float: right;
    color: var(--font-hc);
    font-size: 14px;
}
.vtu-comment-info-title-icon i{
    margin-right: 5px;
    font-size: 18px;
}
.vtu-comment-info-content{
    font-size: 14px;
    color: var(--font-ha);
    padding: 10px 0;
    margin-bottom: 5px;
}
.vtu-comment-info-reply{
    width: calc(100% - 20px);
    padding: 5px 10px;
    background: var(--bg-page);
    margin-bottom: 10px;
}
.vtu-comment-info-reply-li{
    font-size: 12px;
    color: var(--font-ha);
    padding: 5px 0;
}
.vtu-comment-info-reply-li span{
    margin-right: 5px;
    color: var(--primary);
}
.vtu-comment-info-detail{
    width: 100%;
    height: 20px;
    line-height: 20px;
    font-size: 12px;
    color: var(--font-hc);
}
.vtu-comment-info-detail span{
    margin-right: 5px;
    border-radius: 3px;
}
.vtu-comment:last-child .vtu-comment-info,
.vtu-comment.style3:last-child{
    border-bottom: 0;
}
.vtu-comment-info-detail .icon{
    float: right;
    padding: 0px 10px;
}
.vtu-comment-info-detail .icon font{
    font-size: 12px;
    margin-left: 5px;
}
.vtu-comment-top{
    width: 100%;
    height: 30px;
    margin-bottom: 10px;
}
.vtu-comment-top-label{
    float: left;
    margin-left: 10px;
    line-height: 30px;
    color: var(--primary);
    font-size: 14px;
}
.vtu-comment-img{
    width: 100%;
    display: flex;
    height: 80px;
    margin-bottom: 15px;
    margin-top: 5px;
}
.vtu-comment-img-li{
    width: calc((100% - 10px) / 3);
    height: 80px;
    position: relative;
    overflow: hidden;
    margin-right: 5px;
    border-radius: 5px;
}
.vtu-comment-img-li:last-child{
    margin: 0px;
}
.vtu-comment-img-li image{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}


