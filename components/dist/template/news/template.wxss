@import '../../assets/css/Vtu_Common.wxss';

/************************************
          今日头条样式
*************************************/
.vtu-news{
    padding: 15px 10px 0px 10px;
    background: #fff;
    margin-bottom: 10px;
    width: calc(100% - 20px);
}
.vtu-news:last-child{
    border: 0px;
}
.vtu-news-user{
    width: 100%;
    float: left;
    margin-bottom: 20px;
}
.vtu-news-user-img{
    width: 40px;
    height: 40px;
    float: left;
}
.vtu-news-user-img image{
    width: 100%;
    height: 100%;
    border-radius: 100px;
}
.vtu-news-user-info{
    float: left;
    width: calc(100% - 110px);
    margin-left: 10px;
    height: 40px;
}
.vtu-news-user-btn{
    width: 60px;
    float: left;
    height: 25px;
    line-height: 25px;
    text-align: center;
    border-radius: 100px;
    font-size: 12px;
}
.vtu-news-user-info-name{
    width: 100%;
    height: 20px;
    font-size: 14px;
}
.vtu-news-single{
    width: 100%;
    height: auto;
    display: inline-block;
}
.vtu-news-single-info{
    width: calc(100% - 130px);
    height: 80px;
    float: left;
}
.vtu-news-single-info-title,
.vtu-news-many-title{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 14px;
    line-height: 20px;
    color: var(--font-ha);
    width: 100%;
    margin-bottom: 10px;
}
.vtu-news-single-info-detail,
.vtu-news-many-detail,
.vtu-news-user-info-detail{
    width: 100%;
    height: 20px;
    line-height: 20px;
    font-size: 12px;
    color: var(--font-hc);
}
.vtu-news-single-info-detail span,
.vtu-news-many-detail span,
.vtu-news-user-info-detail span{
    margin-right: 5px;
    border-radius: 3px;
}
.vtu-news-single-img{
    width: 120px;
    height: 80px;
    float: right;
    position: relative;
    overflow: hidden;
    border-radius: 5px;
}
.vtu-news-single-img image,
.vtu-news-many-img-li image{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.vtu-news-many{
    width: 100%;
    height: auto;
    display: inline-block;
}
.vtu-news-many-img{
    width: 100%;
    display: flex;
    height: 80px;
    margin-bottom: 15px;
    margin-top: 5px;
}
.vtu-news-many-img-li{
    width: calc((100% - 10px) / 3);
    height: 80px;
    position: relative;
    overflow: hidden;
    margin-right: 5px;
    border-radius: 5px;
}
.vtu-news-many-img-li:last-child{
    margin: 0px;
}
.vtu-news-tool{
    width: 100%;
    height: 40px;
    line-height: 40px;
    display: inline-block;
    margin-top: 10px;
    border-top: 1px solid var(--border-bd);
}
.vtu-news-tool-li{
    width: 33.333%;
    height: 100%;
    text-align: center;
    font-size: 12px;
    color: var(--font-hc);
    display: inline-block;
}
.vtu-news-tool-li i{
    margin-right: 5px;
}
