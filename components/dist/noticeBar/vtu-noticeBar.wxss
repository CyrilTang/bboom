@import "../assets/css/Vtu_Common.wxss";
.Vtu_NoticeBar{
    width: 100%;
    height: 35px;
    line-height: 35px;
    display: flex;
}
.Vtu_NoticeBar--default{
    background-color: transparent;
    color: #909399;
}
.Vtu_NoticeBar--info{
    background-color: #f4f4f5;
    color: #909399;
}
.Vtu_NoticeBar--success{
    background-color: #f0f9eb;
    color: #67c23a;
}
.Vtu_NoticeBar--error{
    background-color: #fef0f0;
    color: #f56c6c;
}
.Vtu_NoticeBar--warning{
    background-color: #fdf6ec;
    color: #e6a23c;
}
.Vtu_NoticeBar_Icon ,
.Vtu_NoticeBar_Img,
.Vtu_NoticeBar_Label{
    height: 100%;
    text-align: center;
    padding: 0px 0 0 10px;
}
.Vtu_NoticeBar_Img{
    width: 50px;
    align-items: center;
    display: flex;
}
.Vtu_NoticeBar_Img image{
    width: 100%;
    height: 100%;
}
.Vtu_NoticeBar_Label{
    font-size: 14px;
}
.Vtu_NoticeBar_Close{
    height: 100%;
    flex: 0;
    text-align: center;
    padding: 0px 10px 0 0;
}
.Vtu_NoticeBar_Content{
    flex: 1;
    padding: 0px 10px;
    height: 100%;
    font-size: 12px;
    overflow: hidden;
    position: relative;
}
.Vtu_NoticeBar_Content_Text{
    height: 100%;
}
.Vtu_NoticeBar_Content_Text.is-scroll{
    white-space: nowrap;
    position:absolute;
    top:0;
}
.Vtu_NoticeBar_Content_Text.hidden{
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.Vtu_NoticeBar_Content_Swiper{
    width: 100%;
    height: 100%;
}
