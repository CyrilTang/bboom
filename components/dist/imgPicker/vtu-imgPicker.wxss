@import "../assets/css/Vtu_Common.wxss";
.Vtu_ImgPicker{
  width: 100%;
  display: grid;
  grid-column-gap: 10px;
  grid-row-gap: 10px;
}
.Vtu_ImgPicker_Li{
  overflow: hidden;
  position: relative;
  border-radius: 5px;
}
.Vtu_ImgPicker_Li:after {
  content: "";
  display: block;
  margin-top: 100%;
}
.Vtu_ImgPicker_Li_Image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.Vtu_ImgPicker_Li.Add::before {
  content: '';
  border: 1px solid var(--border-bd);
  width: calc(100% - 2px);
  height: calc(100% - 2px);
  position: absolute;
  top: 0;
  left: 0;
}
.Vtu_ImgPicker_Li.Add i{
  width: 50px;
  height: 50px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  line-height: 50px;
  color: var(--font-hd);
  font-size: 30px;
}

.Vtu_ImgPicker_Li .delete{
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  background: rgba(0,0,0,.5);
  color: #fff;
  position: absolute;
  top: 0;
  right: 0;
  border-radius: 0 5px 0 0;
}
.Vtu_ImgPicker_Li .delete_hover{
  background: #000;
}
