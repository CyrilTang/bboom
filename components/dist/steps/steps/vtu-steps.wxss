@import "../../assets/css/Vtu_Common.wxss";
.Vtu_Steps{
    width: 100%;
    display: flex;
}
.Vtu_Steps_Li{
    flex: 1;
    color: var(--font-hc);
    text-align: left;
    position: relative;
}
.Vtu_Steps_Li.is-center{
    text-align: center;
}
.Vtu_Steps_Li.is-center .Vtu_Steps_Li_Icon_Line{
    left: calc(50% + 15px) !important;
}
.Vtu_Steps_Li.is-active{
    color: var(--primary) !important;
}
.Vtu_Steps_Li.is-active .Vtu_Steps_Li_Icon_Span .number{
    background: var(--primary) !important;
    border-color: var(--primary) !important;
    color: #fff;
}
.Vtu_Steps_Li.is-active .Vtu_Steps_Li_Icon_Span .number.success{
    background: var(--success) !important;
    border-color: var(--success) !important;
}
.Vtu_Steps_Li.is-active .Vtu_Steps_Li_Icon_Span .number.warning{
    background: var(--warning) !important;
    border-color: var(--warning) !important;
}
.Vtu_Steps_Li.is-active .Vtu_Steps_Li_Icon_Span .number.error{
    background: var(--danger) !important;
    border-color: var(--danger) !important;
}
.Vtu_Steps_Li.is-active .Vtu_Steps_Li_Icon_Span .number.wait{
    background: var(--default) !important;
    border-color: var(--default) !important;
}

.Vtu_Steps_Li_Icon{
    height: 30px;
    line-height: 30px;
    position: relative;
}
.Vtu_Steps_Li_Icon_Span{
    width: 100%;
    height: 100%;
}
.Vtu_Steps_Li_Icon_Span .icon{
    width: 18px;
    height: 18px;
    margin: 5px;
    border: 1px solid transparent;
    line-height: 18px;
    display: inline-block;
    text-align: center;
    font-size: 20px;
}
.Vtu_Steps_Li_Icon_Span .number{
    border: 1px solid var(--font-hd);
    border-radius: 100px;
    font-size: 12px;
}
.Vtu_Steps_Li_Icon_Span .shape{
    width: 6px;
    height: 6px;
    border-radius: 100px;
    line-height: 8px;
    background: var(--font-hd);
    margin: 11px;
}
.Vtu_Steps_Li_Icon_Span .shape.shape--spot{
    border-radius: 100px;
}
.Vtu_Steps_Li_Icon_Span .shape.shape--square{
    border-radius: 2px;
}

.Vtu_Steps_Li_Icon_Line{
    width: calc(100% - 30px);
    height: 1px;
    background: var(--bg-disabled);
    position: absolute;
    top: 50%;
    left: 30px;
    transform: translate(0, -50%);
}
.Vtu_Steps_Li_Icon_Line_Active{
    width: 0;
    height: 100%;
    background: var(--primary);
    transition: width 1s;
}
.Vtu_Steps_Li_Icon_Line_Active.is-active{
    width: 100%;
    height: 100% !important;
}
.Vtu_Steps_Li_Title{
    width: 100%;
}
.Vtu_Steps_Li_Title .title{
    width: 100%;
    height: 30px;
    line-height: 30px;
    font-size: 12px;
    font-weight: bold;
}
.Vtu_Steps_Li_Title .des{
    width: 100%;
    font-size: 10px;
    color: var(--font-hd);
}
.Vtu_Steps_Li_Title .slot{
    width: 100%;
}

.Vtu_Steps--vertical{
    display: block;
}
.Vtu_Steps--vertical .Vtu_Steps_Li{
    width: 100%;
}
.Vtu_Steps--vertical .Vtu_Steps_Li .Vtu_Steps_Li_Icon{
    width: 30px;
    position: absolute;
    top: 0px;
    left: 0px;
    height: 100%;
}
.Vtu_Steps--vertical .Vtu_Steps_Li .Vtu_Steps_Li_Title{
    width: calc(100% - 40px);
    margin-left: 40px;
}
.Vtu_Steps--vertical .Vtu_Steps_Li .Vtu_Steps_Li_Title .title{
    font-size: 14px;
}
.Vtu_Steps--vertical .Vtu_Steps_Li .Vtu_Steps_Li_Title .des{
    font-size: 12px;
    color: var(--font-hd);
    padding-bottom: 10px;
}

.Vtu_Steps--vertical .Vtu_Steps_Li .Vtu_Steps_Li_Icon_Line{
    width: 1px;
    height: calc(100% - 30px);
    left: 50%;
    top: 30px;
    transform: translate(-50%, 0);
}
.Vtu_Steps--vertical .Vtu_Steps_Li .Vtu_Steps_Li_Icon_Line_Active{
    width: 100%;
    height: 0;
    transition: height 1s;
}
