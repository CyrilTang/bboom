@import "../assets/css/Vtu_Common.wxss";
/*弹出对话框*/
.Vtu_Dialog{}
.Vtu_Dialog_Mask{
    width: 0;
    height: 100%;
    position: fixed;
    background: #000;
    top: 0px;
    left: 0px;
    z-index: 2000;
    opacity: 0.3;
}
.Vtu_Dialog_Center{
    width: 0%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    position: fixed;
    opacity: 0;
    z-index: 2001;
    background: #fff;
    box-shadow: 0px 0px 5px #6e6e6e;
    max-height: 80%;
    border-radius: 5px;
}
.Vtu_Dialog_Center_Common{
    width: 100%;
    border-radius: 2px;
    position: relative;
}
.Vtu_Dialog_Center_Common_Close{
    width: 30px;
    height: 30px;
    position: absolute;
    top: -5px;
    right: -5px;
    background: #fff;
    color: var(--lessColor);
    text-align: center;
    border-radius: 100px;
}
.Vtu_Dialog_Center_Common_Close_Icon{
    width: 20px;
    height: 20px;
    background: var(--primary);
    color: #fff;
    margin: 5px;
    text-align: center;
    line-height: 20px;
    font-size: 14px;
    border-radius: 100px;
}
.Vtu_Dialog_Center_Common_Title{
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    font-size: 14px;
    color: var(--font-ha);
    display: inline-block;
    margin-top: 10px;
}
.Vtu_Dialog_Center_Common_Summary{
    width: 100%;
    height: 20px;
    line-height: 20px;
    font-size: 12px;
    text-align: center;
    color: var(--font-hd);
}
.Vtu_Dialog_Center_Body{
    width: calc(100% - 40px);
    margin: 15px 20px 15px 20px;
    font-size: 14px;
    color: var(--font-hc);
    line-height: 20px;
    overflow: hidden;
}
.Vtu_Dialog_Center_Body_Scroll{
    width: 100%;
    height: 100%;
    white-space:nowrap;
}
.Vtu_Dialog_Center_Footer{
    width: 100%;
    margin: 15px 0px 10px 0px;
    display: inline-block;
}
.Vtu_Dialog_Center_Footer_Btn{
}
.Vtu_Dialog_Center_Footer .Vtu_Dialog_Center_Footer_Btn .Footer_Button{
    padding-left: inherit;
    padding-right: inherit;
    width: 100%;
}
.Vtu_Dialog_Center_Footer.is-infeed{
    display: flex;
    margin-bottom: 0px !important;
    margin-top: 25px;
}
.Vtu_Dialog_Center_Footer.is-infeed .Vtu_Dialog_Center_Footer_Btn{
}
.Vtu_Dialog_Center_Footer.is-infeed .Vtu_Dialog_Center_Footer_Btn .Footer_Button{
    border-radius: 0px;
}
.Vtu_Dialog_Center_Footer.is-infeed .Vtu_Dialog_Center_Footer_Btn .Footer_Button:after{
    border-radius: 0px;
    border: 0px;
    border-right: 1px solid var(--font-hd) !important;
    border-top: 1px solid var(--font-hd) !important;
}
.Vtu_Dialog_Center_Footer.is-infeed .Vtu_Dialog_Center_Footer_Btn .Footer_Button:last-child:after{
    border: 0;
}
.Vtu_Dialog_Center_Footer.is-vertical .Vtu_Dialog_Center_Footer_Btn{
    width: 200px;
    margin: 10px auto;
}
