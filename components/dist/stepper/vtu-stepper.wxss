@import "../assets/css/Vtu_Common.wxss";
.Vtu_Stepper{
  width: 100%;
  position: relative;
  display: flex;
}
.Vtu_Stepper_Btn{
    color: var(--font-hc);
}
.Vtu_Stepper_Btn.Minus button,
.Vtu_Stepper_Btn.Minus button:after{
    border-radius: 4px 0 0 4px;
}
.Vtu_Stepper_Btn.Plus button,
.Vtu_Stepper_Btn.Plus button:after{
    border-radius: 0 4px 4px 0;
}
.Vtu_Stepper_Btn.is-disabled{
    color: var(--font-hc);
}
.Vtu_Stepper_Input{
    height: 100%;
    border-top: 1px solid var(--border-bc);
    border-bottom: 1px solid var(--border-bc);
}
.Vtu_Stepper_Input input{
    height: 100%;
    padding: 0px 5px;
    margin: 0px;
    text-align: center;
    font-size: 14px;
    background: #fff;
}
.Vtu_Stepper_Input-Size--medium{
    height: 32px;
}
.Vtu_Stepper_Input-Size--small{
    height: 26px;
}
.Vtu_Stepper_Input-Size--mini{
    height: 20px;
}
.Vtu_Stepper_Input-Size--mini input{
    font-size: 12px;
    min-height: auto !important;
}
