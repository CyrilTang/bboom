/****************************************************************
                            其他设置
****************************************************************/
/*超出部分省略号*/
.overSpace{
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
/*两行文本，超出部分省略号*/
.overTwoSpace{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}
/*三行文本，超出部分省略号*/
.overThreeSpace{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    -webkit-box-orient: vertical;
}
